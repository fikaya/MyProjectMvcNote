
@using MyMvcProject.Entities.ViewModels.Notify
@using MyMvcProject.BusinessLayer.BusinessLayerResults
@model ErrorViewModel

@{
    ViewBag.Title = "Error";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="login-info">
    <div class="container">
        <div class="row main">
            <div class="form-header">
                <h1 class="text-center">@Model.Header</h1>
            </div>
            <div class="main-content">
                <div class="text-danger">
                    <h2><span class="glyphicon glyphicon-remove-circle"></span>&nbsp;&nbsp;&nbsp;@Model.Title</h2>
                    <hr />
                    <p class="text-justify">
                        @foreach (var msg in Model.Items)
                        {
                            @msg.Message<br>
                        }
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>


@{
    string js = string.Empty;

    if (Model.IsRedirecting)
    {
        js = "setTimeout(function () { window.location = '" + Model.RedirectingUrl + "'; }, " +
            Model.RedirectingTimeout + ");";
    }
    if (Model.IsRedirecting)
    {
        js = "setTimeout(function () { window.location = '" + Model.RedirectingUrl + "' }, " +
            Model.RedirectingTimeout + ")";
    }
}

@section Scripts{
    <script>
         @Html.Raw(js);
    </script>
}

